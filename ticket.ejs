<html lang="en">
<head>
    <title>IowaAir</title>
    <link rel="icon" href="/img/Logo1465.png">
    <link rel="stylesheet" href="/css/style.css" type="text/css">
    <link rel="stylesheet" href="/css/ticketstyle.css" type="text/css">
</head>
<body>
    <%var ec_price=trip.tot_ec_price%>
    <%if(!trip.has_ec){%>
    <%ec_price=Number.MAX_SAFE_INTEGER%>
    <%}%>
    <%var fc_price=trip.tot_fc_price%>
    <%if(!trip.has_fc){%>
    <%fc_price=Number.MAX_SAFE_INTEGER%>
    <%}%>
    <div class="passInfo">
        <div class="passName" >
            <%= passenger.fname%> <%= passenger.lname%>
        </div>
        <div>
            Reservation ID: <b><%= passenger.resid%></b>
        </div>
        <div>
            Seat Num: <b><%= passenger.seatnum%></b>
        </div>
     </div>

    <div class="resultitem" flightids=<%=trip.flightIDs%> dept-time="<%=trip.flights[0].depart_time.getFullYear()%>-<%=trip.flights[0].depart_time.getMonth()%>-<%=trip.flights[0].depart_time.getDate()%> <%=trip.flights[0].depart_time.getHours()%>:<%=trip.flights[0].depart_time.getMinutes()%>:<%=trip.flights[0].depart_time.getSeconds()%>" arrive-time="<%=trip.flights[trip.flights.length-1].arrive_time.getFullYear()%>-<%=trip.flights[trip.flights.length-1].arrive_time.getMonth()%>-<%=trip.flights[trip.flights.length-1].arrive_time.getDate()%> <%=trip.flights[trip.flights.length-1].arrive_time.getHours()%>:<%=trip.flights[trip.flights.length-1].arrive_time.getMinutes()%>:<%=trip.flights[trip.flights.length-1].arrive_time.getSeconds()%>" ec_price=<%=ec_price%> fc_price=<%=fc_price%> nstops=<%=trip.num_stops%>  tottime=<%=trip.tot_time%> >



        <div class="tofrombox">
            <br>
            <div class="from tofromh1">
                <b><%=trip.flights[0].origin_portID%> </b>
            </div>
            <div class="mid tofromh1">
                <b>to</b>
            </div>
            <div class="to tofromh1">
                <b><%=trip.flights[trip.flights.length-1].destined_portID%></b>
            </div>
            <br>
            <br>
            <div class="tofromh2">
                <div>From: <%=trip.flights[0].origin_port_name%> </div>
            </div>
            <br>
            <%var n=0%>
            <%while(n<trip.flights.length-1){%>
            <div class="tofromh2">
                <div>Stop: <%=trip.flights[n].destined_port_name%></div>
            </div>
            <%n=n+1%>
            <br>
            <%}%>
            <div class="tofromh2">
                <div>To: <%=trip.flights[trip.flights.length-1].destined_port_name%></div>
            </div>
            <br>
            <div id="timeRange">
                <div class="from tofromh3">
                    <div class="tofrom3">
                        <%=trip.flights[0].depart_time%>
                    </div>
                </div>
                <div class="mid tofromh3">
                    <div class="tofrom3">
                        <span class="dash" >-</span>
                    </div>
                </div>
                <div class="to tofromh3">
                    <div class="tofrom3">
                        <%=trip.flights[trip.flights.length-1].arrive_time%>
                    </div>
                </div>
            </div>
            <br>
            <div class="tofromh4">
                <%var totl=trip.tot_time.split(":")%>
                <%var toth=parseInt(totl[0])%>
                <%var totm=parseInt(totl[1])%>
                <%var totstr=String(toth)+" Hours "+String(totm)+" Minutes"%>
                <div><%=totstr%></div>
            </div>
        </div>
        <div class="flights">
            <br>
            <div class="numstops">
                <b><%=trip.num_stops%> Stops</b>
            </div>
            <div class="indstops">
                <%=trip.flights[0].origin_portID%>
                <%for (ii in trip.flights){%>
                &rArr; <%=trip.flights[ii].destined_portID%>
                <%}%>
                <br>
                <%for(ii in trip.flights){%>
                Flight <%=parseInt(ii)+1%>: <%=trip.flights[ii].Flight_num%>
                <br>
                Plane <%=parseInt(ii)+1%>: <%=trip.flights[ii].PlaneDetails%>
                <br>
                Gate <%=parseInt(ii)+1%>: <%if(trip.flights[ii].gate){%><%=trip.flights[ii].gate%><%}else{%>T/A<%}%>
                <br>
                <br>
                <%}%>
            </div>
        </div>
        <div class="bookit">
            <div class="price priceec">
                <%if (trip.has_ec){%>
                <br>
                <b>econemy</b>
                <%}%>
            </div>
            <div class="price pricefc">
                <%if (trip.has_fc){%>
                <br>
                <b>first class</b>
                <%}%>
            </div>
        </div>

    </div>
</body>
</html>